<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.webjava.kernel.mybatis.mapper.IMAdminMapper">

  <resultMap id="BaseResultMap" type="com.webjava.kernel.entity.IMAdmin">
    <constructor>
      <idArg column="id" javaType="java.lang.Integer" jdbcType="INTEGER" />
      <arg column="uname" javaType="java.lang.String" jdbcType="VARCHAR" />
      <arg column="pwd" javaType="java.lang.String" jdbcType="CHAR" />
      <arg column="status" javaType="java.lang.Byte" jdbcType="TINYINT" />
      <arg column="created" javaType="java.lang.Integer" jdbcType="INTEGER" />
      <arg column="updated" javaType="java.lang.Integer" jdbcType="INTEGER" />
    </constructor>
  </resultMap>
  <sql id="Base_Column_List">
    id, uname, pwd, status, created, updated
  </sql>

  <select id="selectAdminById" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List"/>
    from IMAdmin where id = #{id}
  </select>

  <select id="selectAdminByName" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List"/>
    from IMAdmin where uname = #{username}
    limit 1
  </select>

  <select id="selectAllAdmin" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List"/>
    from IMAdmin
  </select>


  <update id="updatePasswordSelective" parameterType="com.webjava.kernel.entity.IMAdmin">
    update IMAdmin
    <set>
      <if test="pwd!= null">
        pwd = #{pwd,jdbcType=CHAR},
      </if>
    </set>
    where uname = #{uname,jdbcType=VARCHAR}
  </update>

</mapper>